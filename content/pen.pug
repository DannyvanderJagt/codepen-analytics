    link(href='https://fonts.googleapis.com/css?family=Roboto:400,300' rel='stylesheet' type='text/css')
    
  body.pen

    //- 
    //- Menu
    //- scss: menu.scss
    //- 
    #menu 
      a.icon(href='/')
        img(src='images/suitcase-icon.svg')

      .items
        a.item(href='/features') Features
        a.item(href='/usage') Usage
        a.item(href='/privacy') Privacy

      .social
        a(href='https://twitter.com/TheSuitcaseIO')
          img(src='images/twitter.svg')
        a(href='https://codepen.io/thesuitcase')
          img(src='images/codepen.svg')
        a(href='https://codepen.io/thesuitcase')
          img(src='images/love.svg')

    //- 
    //- Header
    //- scss: header.scss
    //- 
    .header
      img(src='images/codepen-icon.svg')
      h1 #{title || '#' + id}
      .info 
        if createdAt
          .item Since: 
            .value #{createdAt}

        if owner && owner.full
          .item Creator: 
            a.value(href='http://codepen.io/thesuitcase') #{owner.full}

    //- 
    //- Features
    //- scss: banner.scss
    //- 
    .banner
      h1 Browsers
      h3 Internet portals

      .content
        .item.browser
          img(src='images/chrome.svg')
          .info
            .title Chrome
            .value
              if browsers.chrome 
                | #{Math.round(browsers.chrome.total / browsers.total * 100)}%
              else
                | 0%
        .item.browser 
          img(src='images/safari.svg')
          .info
            .title Safari
            .value 
              if browsers.safari 
                | #{Math.round(browsers.safari.total / browsers.total * 100)}%
              else
                | 0%
        .item.browser 
          img(src='images/firefox.svg')
          .info
            .title Firefox
            .value 
              if browsers.firefox 
                | #{Math.round(browsers.firefox.total / browsers.total  * 100)}%
              else
                | 0%
        .item.browser 
          img(src='images/opera.svg')
          .info
            .title Opera
            .value 
              if browsers.opera 
                | #{Math.round(browsers.opera.total / browsers.total  * 100)}%
              else
                | 0%
        .item.browser 
          img(src='images/ie.svg')
          .info
            .title IE
            .value 
              if browsers.ie 
                | #{Math.round(browsers.ie.total / browsers.total  * 100)}%
              else
                | 0%


